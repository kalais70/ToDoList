@page
@model ToDoList.EditModel

<br />
<h2 class="text-info">Edit Task</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="ToDo.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Name" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Task"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Task" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Task" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.SubTask"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.SubTask" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.SubTask" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Status"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Status" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Status" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Remarks"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Remarks" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Remarks" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.CreatedDate"></label>
            </div>
            <div class="col-6">
                <input type="date" class="datepicker form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.UpdatedDate"></label>
            </div>
            <div class="col-6">
                <input type="date" class="datepicker form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
